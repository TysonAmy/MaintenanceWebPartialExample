@model IEnumerable<MaintenanceWebsite.Models.AppUser>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <a asp-action="ChangeRole" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-primary">Change Role</a> 
            </td>
        </tr>
}
    </tbody>
</table>
