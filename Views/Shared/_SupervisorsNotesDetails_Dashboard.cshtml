@model MaintenanceWebsite.Models.SupervisorsNoteViewModel

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Area)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Area.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipment.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Issue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issue)
        </dd>
    </dl>
</div>
@Html.Partial("_SupervisorsNotes_FollowUp_Dashboard", Model.SupervisorsNote_Followups)
@if (Model.SupervisorsNote_Followups.Max(followup => followup.ListNumber) == 3)
{
    <a asp-action="Create" asp-controller="SupervisorsNotes_FollowUp" asp-route-id="@Model.Id" class="btn btn-warning">Passdown</a>
}
else if (Model.SupervisorsNote_Followups.Max(followup => followup.ListNumber) > 3)
{
    <a asp-action="Create" asp-controller="SupervisorsNotes_FollowUp" asp-route-id="@Model.Id" class="btn btn-danger">Passdown</a>
}
else
{
    <a asp-action="Create" asp-controller="SupervisorsNotes_FollowUp" asp-route-id="@Model.Id" class="btn btn-primary">Passdown</a>
}

<a asp-action="Complete" asp-controller="SupervisorsNotes" asp-route-id="@Model.Id" class="btn btn-primary">Complete</a>
