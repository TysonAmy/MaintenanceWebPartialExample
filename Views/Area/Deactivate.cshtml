@model MaintenanceWebsite.Models.AreaViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<a asp-action="Main" asp-controller="Dashboards" class="btn btn-secondary">Back to Dashboard</a>

@if (Model.Equipments.Count == 0)
{
    <h3>Are you sure you want to delete this?</h3>
}
else
{
    <h3 class="text-danger">Area contains Equipment, so it can't be deleted.</h3>
}
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    @if (Model.Equipments.Count == 0)
    {
        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
        </form>

    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Equipments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
</div>
