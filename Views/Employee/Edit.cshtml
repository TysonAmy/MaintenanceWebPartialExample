@model MaintenanceWebsite.Models.AppUser

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.Email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftId" class="control-label"></label>
                @Html.DropDownList("ShiftId", SelectListModel.getShiftsSelectList(), "Select Shift", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="SupervisorId" class="control-label"></label>
                @Html.DropDownList("SupervisorId", SelectListModel.getEmployeesSelectList(Model.Id), "Select Supervisor", new { @class = "form-control" })
                <span asp-validation-for="SupervisorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
