@model MaintenanceWebsite.Models.RoleUserViewModel
@{
    ViewData["Title"] = "ChangeRole";
    var rolesSL = (SelectList)ViewData["rolesSL"];

}

<h1>Change Role</h1>

<h4>@Model.Email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="OldRoleName" />
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <select asp-for="RoleName" class="form-control" asp-items=@rolesSL>
                </select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Role" class="btn btn-secondary">Back to List</a>
</div>

